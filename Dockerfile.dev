FROM node:20-alpine

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Install dependencies
COPY package.json pnpm-lock.yaml* ./
RUN pnpm install

# Copy application code
COPY . .

# Expose development port
EXPOSE 3000

# Start development server
CMD ["pnpm", "run", "dev"]